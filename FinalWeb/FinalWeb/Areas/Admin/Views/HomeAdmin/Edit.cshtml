@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model FinalWeb.Models.Product
<!-- Add these lines to include Toastr CSS and JavaScript files -->

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Edit Product</h1>

<hr />

<div>
    <a asp-action="ProductCategory">Back to List</a>
</div>

<div class="row" >
    <div class="col-md-7 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <form method="post" asp-action="Edit" enctype="multipart/form-data" id="zyzy">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="ProductId" />
                    <div class="form-group">
                        <label asp-for="ProductName" class="control-label"></label>
                        <input asp-for="ProductName" class="form-control" />
                        <span asp-validation-for="ProductName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CategoryId" class="control-label"></label>
                        <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UnitPrice" class="control-label"></label>
                        <input asp-for="UnitPrice" class="form-control" />
                        <span asp-validation-for="UnitPrice" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Quantity" class="control-label"></label>
                        <input asp-for="Quantity" class="form-control" />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Barcode" class="control-label"></label>
                        <input asp-for="Barcode" class="form-control" />
                        <span asp-validation-for="Barcode" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="margin-top: 15px;">
                        <label class="font-weight-bold" style="margin-top: 15px;">Change Picture: </label>

                        <input type="file" id="ProductImage" name="imageFile" accept="image/*" class="form-control" />
                    </div>
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success" role="alert" style="margin-top: 15px" >
                            @TempData["SuccessMessage"]
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger" role="alert" style="margin-top: 15px" >
                            @TempData["ErrorMessage"]
                        </div>
                    }
                  
                </form>
            </div>
        </div>
       
    </div>        
    <div class="col-md-5 grid-margin stretch-card">     
        <div class="card">           
            <div class="card-body">
                <form method="post" asp-controller="HomeAdmin" enctype="multipart/form-data" asp-action="Edit"  id="zyzy">
                    <input type="hidden" value="ProductId"/>
                    <div class="chartjs-size-monitor">
                    <div class="chartjs-size-monitor-expand">
                            <label class="font-weight-bold" style="margin-bottom: 15px" >Picture of Product</label>
                        <span asp-validation-for="ProductImage" class="text-danger"></span>
                            <!-- Display the image if the ProductImage is not null or empty onclick="uploadImage()"-->
                            @if (Model != null && !string.IsNullOrEmpty(Model.ProductImage))
                            {
                                <img src="~/Assets/img/@Model.ProductImage" alt="" class="img-fluid" />
                            }
                            else
                            {
                                <img src="~/Assets/img/default.png" alt="" class="img-fluid" />
                            }
                    </div>
                </div>
                  
                    <div class="mt-3">
                        <input type="submit" value="Save" class="btn btn-primary" form="zyzy" />
                    </div>

                </form>
